<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StorePharmacy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Pharmacy Details"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Pharmacy ID -->
        <EditText
            android:id="@+id/etPharmacyId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Pharmacy Id"
            android:inputType="text" />

        <!-- Pharmacy Name -->
        <EditText
            android:id="@+id/etPharmacyName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Pharmacy Name"
            android:inputType="text"  />

        <!-- Pharmacy Contact -->
        <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Phone"
            android:inputType="phone" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"  />

        <!-- Pharmacy Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Address"
            android:inputType="textPostalAddress" />

        <!-- Pharmacy opening time -->
        <EditText
            android:id="@+id/etOpeningTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Opening Time (e.g., 9:00 AM)"
            android:inputType="text" />

        <EditText
            android:id="@+id/etClosingTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:hint="Closing Time (e.g., 9:00 PM)"
            android:inputType="text" />


        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitPharmacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pharmacy"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_design" />

        <!-- Retrieve Button -->
        <Button
            android:id="@+id/btnRetrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrieve Pharmacy"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_design" />

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Pharmacy"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_design" />
    </LinearLayout>
</ScrollView>
