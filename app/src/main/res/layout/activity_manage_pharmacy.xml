<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ManagePharmacy">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Pharmacies"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonAddPharmacy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Add New Pharmacy"
        android:layout_marginTop="16dp"
        android:background="#A979FF"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonViewPharmacies"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="#A979FF"
        android:text="View All Pharmacies"
        android:textSize="18sp" />

</LinearLayout>
