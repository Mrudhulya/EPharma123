<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with rounded corners and border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <stroke android:width="2dp" android:color="#00796B"/> <!-- Border color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <padding android:left="16dp" android:right="15dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Dropdown Icon at the end -->
    <item android:gravity="end">
        <bitmap
            android:src="@android:drawable/arrow_down_float"
            android:gravity="center"/>
    </item>

</layer-list>
